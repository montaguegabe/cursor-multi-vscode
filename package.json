{
    "name": "vscode-multi",
    "displayName": "VS Code Multi",
    "description": "Manage multiple Git repos for VS Code/Cursor",
    "version": "1.0.1",
    "publisher": "montaguegabe",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/montaguegabe/vscode-multi-vscode"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "VS Code Multi",
            "properties": {
                "vscodeMulti.executablePath": {
                    "type": "string",
                    "default": "multi",
                    "description": "Path to the multi executable. By default uses 'multi' from PATH."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "install-extension": "vsce package --allow-missing-repository && cursor --install-extension vscode-multi-1.0.1.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.17.48",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.19.0",
        "typescript": "^5.7.3"
    }
}
